{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true
  },

  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
